<%= simple_form_for(@trade) do |f| %>
  <%= f.error_notification %>
    <div class="span12 wrap-container">
      <div class="trades">
		<div class="trades-title">
		  <h2>购买商品</h2>
		  <hr/>
		</div>
		<ul class="breadcrumb">
			<li>查看购物车 <span class="divider">/</span></li>
			<li class="active">购买商品 <span class="divider">/</span></li>
			<li>付款到支付宝 <span class="divider">/</span></li>
			<li>购买成功</li>
		</ul>
		
		
        <h3>配送地址</h3>
		<section class="bg-content clearfix">
			<p><%= f.input :receiver_name %></p>
			<p><%= f.input :receiver_state %><%= f.input :receiver_city %><%= f.input :receiver_district %><%= f.input :receiver_address %></p>
			<p><%= f.input :receiver_zip %></p>
			<p><%= f.input :receiver_mobile %></p>
		</section>


        <h3>支付方式</h3>
		<section class="bg-content clearfix">
			<p><%= f.input :received_payment %></p>
		</section>


        <h3>商品</h3>
		<section class="bg-content clearfix">
			<table class="orders-table table">
			  <thead>
				<tr>
				  <th>商品名称</th>
				  <th class="value">图片</th>
				  <th class="value">价格</th>
				  <th class="value">数量</th>
				  <th class="actions">操作</th>
				</tr>
			  </thead>
			  <tbody>
				<% @cart.cart_items.each do |cart_item| %>
				<tr>
				  <td><img style="width:100px;height:100px;" src="<%= cart_item.item.user_share.photos.first.url %>"/></td>
				  <td><a href="<%= cart_item.item_id %>"><%= cart_item.item.title %></a> </td>
				  <td class="value"><%= cart_item.item.price %></td>
				  <td><%= cart_item.count %></td>
				  <td class="actions">
					<a href="#">删除</a>
				  </td>
				</tr>
				<% end %>
			  </tbody>
			</table>
			<div class="bar-total">
				<span class="total-price">商品总价(不含运费)：<em class="total-money">108.30</em>元</span><button type="submit" class="btn btn-large btn-primary">提交订单</button>
			</div>
		</section>
  <% end %>
  </div>
</div>
