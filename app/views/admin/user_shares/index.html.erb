<div class="row-fluid">
  <div class="widget_container">
    <div class="well nomargin">
      <div class="navbar navbar-static navbar_as_heading">
        <div class="navbar-inner">
          <div class="container" style="width: auto;">
            <a class="brand">所有分享</a>
            <a class="btn pull-right" href="add-new-article.html">Add New</a>
          </div>
        </div>
      </div>
      <div class="subnav">
        <form class="navbar-search pull-right" action="">
          <input type="text" class="search-query" placeholder="Search">
        </form>
      </div>

      <table class="table">
        <thead>
          <tr>
            <td style="width:20px;"><input type="checkbox" id="chkbck" /></td>
            <td>Title</td>
            <td>Author</td>
            <td>Categories</td>
            <td>Tags</td>
            <td><i class="icon-large icon-comment-alt-1"></i></td>
            <td>Date</td>
          </tr>
        </thead>
        <tbody>
        <% @user_shares.each do | share|  %>
          <tr>
            <td><input type="checkbox" class="chkbck" /></td>
            <td>
              <img src="<%=share.photos.first.url %>" alt="" style="width:100px;height:100px;" />
            </td>
            <td><%= share.owner.name %></td>
            <td><a href="#"><span class="label label-info"><%= share.category.name %></span></a></td>
            <td><% share.tags.each do |tag| %><span class="badge badge-info"><%= tag.name %></span><% end %></td>
            <td><%= share.comments.count %></td>
            <td><%= share.created_at.to_date %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="subnav nobg">
        <div class="span4">
        </div>
      </div>
    </div>
  </div>
</div>

