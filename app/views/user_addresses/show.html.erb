<div class="span10 content-setting">

	<h3>收货地址详情</h3>	
	<div class="bg-content">
		<p>
			<a class="btn btn-primary" href="/user_addresses/1/edit">编辑</a>
			<a class="btn btn-primary" href="/user_addresses">返回</a>
		</p>
		
		<table class="table table-striped table-bordered">
			<tr>
				<th width="12%">收货人姓名</th>
				<td width="88%"><%= @user_address.name %></td>
			</tr>
			<tr>
				<th>所在国家</th>
				<td><%= @user_address.state %></td>
			</tr>
			<tr>
				<th>所在城市</th>
				<td><%= @user_address.city %></td>
			</tr>
			<tr>
				<th>所在省份</th>
				<td><%= @user_address.district %></td>
			</tr>
			<tr>
				<th>街道地址</th>
				<td><%= @user_address.address %></td>
			</tr>
			<tr>
				<th>手机号码</th>
				<td><%= @user_address.mobile %></td>
			</tr>
			<tr>
				<th>邮政编码</th>
				<td><%= @user_address.zip %></td>
			</tr>
		</table>

	</div>
	<!--/.bg-content -->
</div>
<!--/.span10 -->