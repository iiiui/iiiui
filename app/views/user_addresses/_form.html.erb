<%= simple_form_for(@user_address) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :state %>
    <%= f.input :city %>
    <%= f.input :district %>
    <%= f.input :address %>
    <%= f.input :zip %>
    <%= f.input :mobile %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
