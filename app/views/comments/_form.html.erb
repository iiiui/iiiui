<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>
  <%= f.input :user_id,:as => :hidden, :input_html => { :value => current_user.id } %>
  <%= f.input :user_shares_id, :as => :hidden,:input_html => { :value => user_share.id }%>
  <textarea name="comment[body]" rows="5" class="input-xxlarge inp-btm" name="comments" style="resize: none;" placeholder="Enter your comment here.."></textarea><br />
  <%= f.button :submit,:value=>"发布评论",:id => "addComment" %>
<% end %>
