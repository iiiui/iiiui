<div class="modal hide"  id="itemModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">我要出售</h3>
  </div>
  
  <div class="modal-body" >
    <%= simple_form_for(Item.new) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :title, :label => "名称" %>
      <%= f.input :price, :label => "价格" %>
      <%= f.input :count, :label => "数量" %>
      <%= f.input :user_shares_id, :as => :hidden %>
      <%= f.input :description, :label => "描述", :input_html => { :rows => 5, :class=> "input-xxlarge"  } %>
	  
	  <p>
        <input class="btn btn-large btn-primary" type="submit" id="additem" value="出售" />
      </p>
    </div>
  <% end %>
  
  </div>
</div>