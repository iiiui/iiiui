<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :user_shares_id, :as => :hidden, :input_html => { :value =>@share.id  } %>
    <%= f.input :description ,:input_html => { :value =>@share.description  } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
