<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>
  <h3>商品图片</h3>
  <img src="<%= @share.photos.first.url %>">
  <h3>商品描述</h3>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :price %>
    <%= f.input :count %>
    <%= f.input :user_shares_id, :as => :hidden, :input_html => { :value =>@share.id  } %>
    <%= f.input :description ,:input_html => { :value =>@share.description,:rows => 5  } %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
